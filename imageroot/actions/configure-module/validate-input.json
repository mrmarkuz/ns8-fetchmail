{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configure fetchmail",
    "$id": "http://nethserver.org/json-schema/task/input/fetchmail/configure-module",
    "description": "Configure fetchmail",
    "examples": [
        {
            "host": "fetchmail.domain.org"
        }
    ],
    "type": "object",
    "required": [
        "host"        
    ],
    "properties": {
        "host": {
            "type": "string",
            "description": "Host name for the application, like 'fetchmail.domain.org'",
            "format": "hostname",
            "pattern": "\\."
        }        
    }
}